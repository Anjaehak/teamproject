<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="applies">
	<select id="findByApply" resultType="boolean" parameterType="map">
		SELECT * FROM APPLIES WHERE APP_ID= #{boardID } AND PARTICIPANT= #{writer }
	</select>
	<insert id="apply" parameterType="map">
		INSERT INTO APPLIES VALUES (#{boardID }, #{writer })
	</insert>
	<select id="applicantCnt" resultType="int" parameterType="string">
		SELECT COUNT(*) FROM APPLIES WHERE APP_ID = #{boardId }
	</select>
</mapper>